@{
}
@model Projet.Models.ChangeInterviewDateViewModel

@{
    ViewData["Title"] = "Change Interview Date";
}

<h2>Change Interview Date</h2>

<form asp-action="ChangeDate" method="post">
    <input type="hidden" asp-for="InterviewId" />

    <div class="form-group">
        <label asp-for="NewInterviewDate" class="control-label"></label>
        <input asp-for="NewInterviewDate" class="form-control" />
        <span asp-validation-for="NewInterviewDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Update Date" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
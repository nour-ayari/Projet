@model IEnumerable<Projet.Models.JobApplication>

@{
    ViewData["Title"] = "Job Applications";
}

<h1>Job Applications</h1>

<table class="table">
    <thead>
        <tr>
            <th>Job Title</th>
            <th>Applicant Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Resume</th>
            <th>Feedback</th>
            <th>Status</th>
            <th>Applied Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Job.Title</td>
                <td>@item.ApplicantName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td><a href="@item.Resume" target="_blank">Download</a></td>
                <td>@item.Feedback</td>
                <td>@item.Status</td>
                <td>@item.AppliedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    @if ((item.Status == "Pending") | (item.Status == "Interview Cancelled"))

                    {
                        <!-- Schedule Interview button -->
                        <a asp-action="Schedule" asp-route-id="@item.JobApplicationId" class="btn btn-primary btn-sm">Schedule Interview</a>
                        <span>|</span>
                        <a asp-action="Reject" asp-route-id="@item.JobApplicationId" class="btn btn-danger btn-sm">Reject</a>
                    }
                    else if (item.Status == "Scheduled")
                    {
                        <!-- View Interview Details button -->
                        <a asp-action="Details" asp-controller="Interviews" asp-route-id="@item.JobApplicationId" class="btn btn-info btn-sm">View Interview</a>
                        <span>|</span>
                        <a asp-action="Reject" asp-route-id="@item.JobApplicationId" class="btn btn-danger btn-sm">Reject</a>
                    }
                    
                    else if (item.Status == "Rejected")
                    {
                        <!-- Rejected status (no buttons) -->
                        <span class="text-danger">Rejected</span>
                    }
                    else if (item.Status == "Accepted")
                    {
                        <!-- Accepted status (no buttons) -->
                        <span class="text-success">Accepted</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@model Projet.Models.ScheduleInterviewViewModel


@{
    ViewData["Title"] = "Schedule Interview";
}

<h2>Schedule Interview</h2>

<form asp-action="Schedule" method="post">
    <input type="hidden" asp-for="JobApplicationId" />

    <div class="form-group">
        <label asp-for="InterviewDate" class="control-label"></label>
        <input asp-for="InterviewDate" class="form-control" />
        <span asp-validation-for="InterviewDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="meet" class="control-label"></label>
        <input asp-for="meet" class="form-control" />
        <span asp-validation-for="meet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Schedule" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}